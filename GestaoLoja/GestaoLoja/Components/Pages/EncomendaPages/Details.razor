@page "/encomenda/details"
@attribute [Authorize(Roles = "Admin, Funcionario")]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Encomenda</h2>
    <hr />
    @if (encomenda is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Data</dt>
            <dd class="col-sm-10">@encomenda.Data</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@encomenda.Estado</dd>
            <dt class="col-sm-2">pagamentoEfetuado</dt>
            <dd class="col-sm-10">@encomenda.pagamentoEfetuado</dd>
            <dt class="col-sm-2">pagamentoConfirmadoInternamente</dt>
            <dd class="col-sm-10">@encomenda.pagamentoConfirmadoInternamente</dd>
            <dt class="col-sm-2">Rua</dt>
            <dd class="col-sm-10">@encomenda.Rua</dd>
            <dt class="col-sm-2">Localidade1</dt>
            <dd class="col-sm-10">@encomenda.Localidade1</dd>
            <dt class="col-sm-2">CodigoPostal</dt>
            <dd class="col-sm-10">@encomenda.CodigoPostal</dd>
            <dt class="col-sm-2">Cidade</dt>
            <dd class="col-sm-10">@encomenda.Cidade</dd>
            <dt class="col-sm-2">Pais</dt>
            <dd class="col-sm-10">@encomenda.Pais</dd>
            <dt class="col-sm-2">ClienteId</dt>
            <dd class="col-sm-10">@encomenda.ClienteId</dd>
        </dl>
        <div>
            <a href="@($"/encomenda/edit?id={encomenda.Id}")">Edit</a> |
            <a href="@($"/encomenda")">Back to List</a>
        </div>
    }
</div>

@code {
    private Encomenda? encomenda;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        encomenda = await context.Encomendas.FirstOrDefaultAsync(m => m.Id == Id);

        if (encomenda is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
